---
interface Props {
  id: number;
  anchorText: string;
  authorName: string;
  body: string;
  createdAt: string;
}

const { id, anchorText, authorName, body, createdAt } = Astro.props;
---
<aside class="comment-bubble" data-comment-id={id} data-anchor={anchorText}>
  <blockquote class="comment-anchor">"{anchorText}"</blockquote>
  <p class="comment-body">{body}</p>
  <footer class="comment-meta">
    <strong>{authorName}</strong>
    <time datetime={createdAt}>{new Date(createdAt).toLocaleDateString()}</time>
  </footer>
</aside>

<style>
  .comment-bubble {
    border-left: 3px solid #2563eb;
    padding: 0.75rem 1rem;
    margin: 1rem 0;
    background: #f0f5ff;
    border-radius: 0 6px 6px 0;
    font-size: 0.9rem;
  }
  .comment-anchor {
    font-style: italic;
    color: #555;
    margin-bottom: 0.5rem;
    font-size: 0.85em;
    border: none;
    padding: 0;
  }
  .comment-body { margin-bottom: 0.5rem; }
  .comment-meta {
    display: flex;
    gap: 1rem;
    color: #666;
    font-size: 0.8em;
  }
</style>
