---
import { t } from '../i18n/utils';

interface Props {
  title?: string;
  description?: string;
  locale: string;
  slug?: string;
}

const { title, description, locale, slug = '' } = Astro.props;
const site = Astro.site?.toString().replace(/\/$/, '') ?? '';

const altLocale = locale === 'en' ? 'pl' : 'en';
const canonicalUrl = `${site}/${locale}/${slug}`.replace(/\/$/, '');
const altUrl = `${site}/${altLocale}/${slug}`.replace(/\/$/, '');

const pageTitle = title ? `${title} â€” ${t('site.title', locale)}` : t('site.title', locale);
const pageDesc = description ?? t('site.description', locale);
---
<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={pageDesc} />
    <title>{pageTitle}</title>
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang={locale} href={canonicalUrl} />
    <link rel="alternate" hreflang={altLocale} href={altUrl} />
    <link rel="alternate" hreflang="x-default" href={`${site}/en/${slug}`.replace(/\/$/, '')} />
    <link rel="alternate" type="application/rss+xml" title={`${t('site.title', locale)} RSS`} href={`/${locale}/rss.xml`} />
    <style is:global>
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
      :root {
        --font-sans: system-ui, -apple-system, sans-serif;
        --font-mono: 'Courier New', Courier, monospace;
        --color-bg: #fafaf8;
        --color-text: #1a1a1a;
        --color-muted: #666;
        --color-accent: #2563eb;
        --color-border: #e2e2e2;
        --max-width: 680px;
      }
      body {
        font-family: var(--font-sans);
        background: var(--color-bg);
        color: var(--color-text);
        line-height: 1.7;
        font-size: 1rem;
      }
      a { color: var(--color-accent); }
      a:hover { text-decoration: none; }
      header {
        border-bottom: 1px solid var(--color-border);
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: var(--max-width);
        margin: 0 auto;
        width: 100%;
      }
      nav { display: flex; gap: 1.25rem; font-size: 0.9rem; }
      main {
        max-width: var(--max-width);
        margin: 2.5rem auto;
        padding: 0 1.5rem;
      }
      footer {
        text-align: center;
        padding: 2rem 1.5rem;
        color: var(--color-muted);
        font-size: 0.85rem;
        border-top: 1px solid var(--color-border);
        margin-top: 4rem;
      }
      h1, h2, h3, h4 { line-height: 1.3; margin-bottom: 0.5em; margin-top: 1.5em; }
      h1 { font-size: 1.75rem; margin-top: 0; }
      p { margin-bottom: 1em; }
      article img { max-width: 100%; border-radius: 4px; }
      code {
        font-family: var(--font-mono);
        font-size: 0.875em;
        background: #f0f0ee;
        padding: 0.1em 0.3em;
        border-radius: 3px;
      }
      pre { background: #f0f0ee; padding: 1em; border-radius: 6px; overflow-x: auto; margin-bottom: 1em; }
      pre code { background: none; padding: 0; }
      .tag {
        display: inline-block;
        font-size: 0.8rem;
        background: #e8e8e8;
        padding: 0.2em 0.6em;
        border-radius: 99px;
        text-decoration: none;
        color: var(--color-text);
        margin-right: 0.25rem;
      }
      .tag:hover { background: #d0d0d0; }
      .muted { color: var(--color-muted); font-size: 0.875rem; }
      .click-badge {
        display: inline-block;
        font-size: 0.7em;
        font-weight: 500;
        color: #555;
        background: #e8e8e4;
        border-radius: 99px;
        padding: 0.05em 0.5em;
        margin-left: 0.3em;
        vertical-align: middle;
        white-space: nowrap;
        line-height: 1.6;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <header>
      <a href={`/${locale}`} style="font-weight:700;text-decoration:none;color:inherit;">{t('site.title', locale)}</a>
      <nav>
        <a href={`/${locale}`}>{t('nav.home', locale)}</a>
        <a href={`/${altLocale}`}>{t('lang.switch', locale)}</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      &copy; {new Date().getFullYear()} anthony.krakow.pl
    </footer>
  </body>
</html>
